<div class="user-form">
  <h1>Log In</h1>

  <%= form_tag "/login" do %>
    <div class="field">
      <%= label_tag :username, nil, class: "label" %>
      <%= text_field_tag :username, nil, class: "input" %> <br/>
    </div>
    <div class="field">
      <%= label_tag :password, nil, class: "label" %>
      <%= password_field_tag :password, nil, class: "input" %> <br/>
    </div>
    <%= submit_tag "Log In", class: "button" %>
  <% end %>
</div>
