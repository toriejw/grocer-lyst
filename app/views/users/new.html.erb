<div class="user-form">
  <h1>Create an account</h1>

  <%= form_for(@user) do |f| %>
    <div class="field">
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: "input" %> <br/>
    </div>
    <div class="field">
      <%= f.label :email, class: "label" %>
      <%= f.text_field :email, class: "input" %> <br/>
    </div>
    <div class="field">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, class: "input" %> <br/><br/>
    </div>
    <%= f.submit "Create account", class: "button" %>
  <% end %>

  Already signed up? <a href="/login">Log in here</a>.
</div>
